<?xml version="1.0" encoding="utf-8"?>
<network-security-config>
    <!-- Configuration par défaut pour toutes les connexions -->
    <base-config cleartextTrafficPermitted="false">
        <!-- Permettre uniquement les certificats système et les certificats utilisateur -->
        <trust-anchors>
            <!-- Certificats système -->
            <certificates src="system" />
            <!-- Certificats utilisateur (pour le développement uniquement) -->
            <!-- Décommenter uniquement pour le développement local -->
            <!-- <certificates src="user" /> -->
        </trust-anchors>
    </base-config>
    
    <!-- Configuration spécifique pour le domaine de production -->
    <domain-config cleartextTrafficPermitted="false">
        <domain includeSubdomains="true">easykonect.smil-app.com</domain>
        <trust-anchors>
            <certificates src="system" />
        </trust-anchors>
    </domain-config>
    
    <!-- Configuration pour le développement local (émulateur) -->
    <domain-config cleartextTrafficPermitted="true">
        <domain includeSubdomains="true">10.0.2.2</domain>
        <domain includeSubdomains="true">localhost</domain>
        <domain includeSubdomains="true">127.0.0.1</domain>
    </domain-config>
</network-security-config>

